<?php
class Wdc_Checkout_Helper_CartHelper extends Mage_Core_Helper_Abstract
{
	public function CartLabelChooser($productId=0, $code=0)
	{
		switch($code)
		{
			case 0:
				return $this->CartCrusher($productId);
				break;
			case 1:
				return $this->AdminOrderCrusher($productId);
				break;
			case 2: 
				return $this->reviewCrushCheck($productId);
				break;
			case 3: 
				return $this->setEmailHtml($productId);
				break;
			case 4: 
				return $this->setPlainLabel($productId);
				break;
			default:
				return "Function not defined";
				break;	
		}
	}	
	
	protected function CartCrusher($item_id)
	{
		$carterizer = new Wdc_Checkout_Block_Cart();
		return $carterizer->getCartOptionsLabel($item_id);		
	}
	
	protected function AdminOrderCrusher($item_id)
	{
		$carterizer = new Wdc_Checkout_Block_Cart();
		return $carterizer->getAdminOptionsLabel($item_id);		
	}
	
	protected function reviewCrushCheck($item_id)
	{
		$carterizer = new Wdc_Checkout_Block_Cart();	
		return $carterizer->setCrushRadio($item_id);
	}
	
	protected function setEmailHtml($item_id)
	{
		$html = null;
		$Wdc_Cart = new Wdc_Checkout_Block_Cart();
		if($Wdc_Cart->isGrainOrder($item_id))
		{
			$html = '<tr><td colspan="4">'.$Wdc_Cart->getAdminOptionsLabel($item_id).'</td></tr>';
		}	
		return $html;			
	}
	
	protected function setPlainLabel($item_id)
	{
		$html = null;
		$Wdc_Cart = new Wdc_Checkout_Block_Cart();
		if($Wdc_Cart->isGrainOrder($item_id))
		{
			$html = $Wdc_Cart->getAdminOptionsLabel($item_id);
		}	
		return $html;
	}
	
	
}
?>