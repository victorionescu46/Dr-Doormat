<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<script type="text/javascript" charset="utf-8">
  jQuery(document).ready(function(){
    jQuery('#pre .add-to-cart-btn').each(function() {
        jQuery(this).addClass('preorder-btn');
      });
  });
</script>
<?php $_productCollection=$this->getLoadedProductCollection() ?>
<div id="product-block">
<div class="category-products">
    <?php // List mode ?>
    <?php $_iterator = 0; ?>
    <ol class="products-list" id="products-list">
    <?php foreach ($_productCollection as $_product): ?>
        <li class="item<?php if( ++$_iterator == sizeof($_productCollection) ): ?> last<?php endif; ?>">
              <div class="product-image"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(110); ?>" width="110" height="110" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a></div>     
                    <h2 class="product-name-green"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>
                
                    <span class="av"><?php echo $_product->getAttributeText('availability') ?></span>
                    <?php if($_product->isSaleable()): ?>                      
                        <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="add-to-cart-btn" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"></button>
                    <?php else: ?>
                       <button type="button" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')" class="preorder-btn">&nbsp;</button>
                    <?php endif; ?>
                    
                    <div class="desc std">
                        <p><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getShortDescription(), 'short_description') ?></p>
                    </div>

  
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('products-list', 'none-recursive')</script>

</div>
<?php //endif; ?>
</div>
<div style="clear"></div>
